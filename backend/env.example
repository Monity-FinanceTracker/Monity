# Monity Backend Environment Variables
# Copy this file to .env and configure the values

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_KEY=your_supabase_service_role_key_here

# Redis Configuration (Optional - falls back to memory cache)
# For local development with Redis installed:
REDIS_URL=redis://localhost:6379

# For Redis Cloud or remote Redis:
# REDIS_URL=redis://username:password@hostname:port

# For Redis with password:
# REDIS_URL=redis://:password@localhost:6379

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
SESSION_SECRET=your_secure_session_secret_here

# Logging
LOG_LEVEL=info

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_ALERT_THRESHOLD_MS=1000

# AI/ML Features
ENABLE_SMART_CATEGORIZATION=true

# Database Connection Pool (if using custom Postgres)
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# Email Configuration (if using email features)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_email_password 